{
  "name": "ja-auth-sdk",
  "version": "0.1.10",
  "description": "A reusable Firebase Authentication SDK with pre-built UI and headless mode",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "prepare": "npm run build",
    "test": "jest",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "lint:report": "eslint . --ext .ts,.tsx --format html --output-file eslint-report.html"
  },
  "keywords": [
    "firebase",
    "authentication",
    "auth",
    "sdk",
    "react-native"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js"
    },
    "./ui": {
      "import": "./dist/ui/AuthUi.js"
    }
  },
  "devDependencies": {
    "@react-native-community/eslint-config": "^3.2.0",
    "@types/node": "^24.10.2",
    "@types/react": ">=18",
    "@types/react-native": "^0.72.8",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.2.1",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.4",
    "typescript": "~5.9.3"
  },
  "peerDependencies": {
    "@invertase/react-native-apple-authentication": "^2.0.0",
    "@react-native-firebase/app": "^23.0.0",
    "@react-native-firebase/auth": "^23.0.0",
    "@react-native-google-signin/google-signin": "^10.0.0",
    "react": ">=18.0.0",
    "react-native": ">=0.68.0"
  },
  "dependencies": {
    "@invertase/react-native-apple-authentication": "^2.0.0",
    "@react-native-google-signin/google-signin": "^10.0.0"
  },
  "author": "Ikenna Richard",
  "license": "MIT"
}
